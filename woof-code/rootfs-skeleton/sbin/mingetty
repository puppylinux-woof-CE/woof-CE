#!/bin/sh

#set -x

for i in $@
do
	case $1 in
		"") echo -n ;;
		--noclear)     NOCLEAR=1 ;;
		--nonewline)   NONEWLINE=1 ;;
		--noissue)     NOISSUE=1 ;;
		--nohangup)    NOHANGUP=1 ;;
		--nohostname)  NOHOSTNAME=1 ;;
		--loginprog)   shift; LOGINPROG=${1} ;;
		--delay)       shift; DELAY=${1} ;;
		--chdir)       shift; CHDIR=${1} ;;
		--autologin)   shift; AUTOLOGIN=${1} ;;
		--loginpause)  LOGINPAUSE=1 ;;
		*) TTY=$1 ;;
	esac
	shift
done

if [ "$CHDIR" ] ; then
	cd "$CHDIR"
fi

if [ "$DELAY" ] ; then
	sleep $DELAY
fi

if [ -z $NOCLEAR ] ; then
	clear
fi

if [ -z $NONEWLINE ] ; then
	echo -n
fi

if [ -z $NOISSUE ] ; then
	while read l ; do
		[ -z "$l" ] && continue
		echo "$l"
	done < /etc/issue
fi

if [ "$LOGINPAUSE" ] ; then
	read zz
fi

export AUTOLOGIN

if [ "$TTY" ] ; then
	if [ "$AUTOLOGIN" ] ; then
		exec getty -n -l /bin/autologin 38400 $TTY
	else
		exec getty 38400 $TTY
	fi
fi

### END ###