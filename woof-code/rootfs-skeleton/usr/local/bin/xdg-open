#!/bin/sh
#this script created by Jemimah. see: http://murga-linux.com/puppy/viewtopic.php?t=63400&start=150
#110115 xdg-open used to be a symlink to defaulthandler.

case "$1" in 
        '') exit
                ;;
#        magnet:*) exec transmission "$1" 
#                ;;
        *://*) exec $DEFAULTBROWSER "$1" 
                ;;
        *@*.*) exec rox -U "mailto:${1}"
                ;;
        *) exec rox "$1"
                ;;
esac

