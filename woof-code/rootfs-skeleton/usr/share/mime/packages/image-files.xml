<?xml version="1.0"?>
<!-- Windows-specific mime info -->

<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
	
  <mime-type type="application/x-img">
    <comment>Disk image</comment>
    <glob pattern="*.img"/>
    <glob pattern="*.vhd"/>
    <glob pattern="*.hdd"/>
    <glob pattern="*.hfv"/>
    <glob pattern="*.vdi"/>
    <glob pattern="*.dmg"/>
    <glob pattern="*.hdd"/>
    <glob pattern="*.vmdk"/>
    <glob pattern="*.gdrive"/>
  </mime-type>
  
  <mime-type type="application/x-vfd">
    <comment>Floppy disk image</comment>
    <glob pattern="*.vfd"/>
    <glob pattern="*.ima"/>
    <glob pattern="*.dsk"/>
  </mime-type>
  
</mime-info>
