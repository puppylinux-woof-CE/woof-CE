  CTL{values}="100%"
CTL{name}="Wave Playback Switch",CTL{do_search}=="1", \
  CTL{values}="on"

CTL{reset}="mixer"
CTL{name}="Music Playback Volume",CTL{do_search}=="1", \
  CTL{values}="100%"
CTL{name}="Music Playback Switch",CTL{do_search}=="1", \
  CTL{values}="on"

