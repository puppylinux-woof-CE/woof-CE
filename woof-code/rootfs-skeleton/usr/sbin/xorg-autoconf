[ -e $XORG_MODULE_PATH/drivers/${drv}_drv.so ] && drvfound="1"

if [ "$drvfound" == "" ]; then
 if [ -e /sys/firmware/efi ]; then
  drv="fbdev"
 else
  if [ "$(ls /dev/fb* 2>/dev/null)" != "" ]; then
   drv="fbdev"
   accel=""
  else
   drv="vesa"
   accel=""
  fi
 fi
fi

echo 'Section "Device"
	Identifier  "Card'$cnum'"
	Driver      "'$drv'" #card'$cnum'driver
	BusID       "'$bid'" #card'$cnum'busid
EndSection
'
	
}

