devid="$(echo "$1" | cut -f 2 -d ':')"
cnum="$2"
xbid="$(echo "$PCILIST" | grep "$1" | cut -f 1 -d ' ')"
bid="$(decode_busid "$xbid")"

case $devid in
8c03|8c02|8c01|8c00|8a10|8a01|883d|5631)
 drv="s3virge"
;;
9102|8e26|8c2*|8d0*|8c1*|8a2*)
 drv="savage"
;;
*)
 drv="s3"
;;
esac

