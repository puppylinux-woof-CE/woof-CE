#!/bin/ash
# replacement for minixcal

osmobutton='--no-buttons'
if [ "`which osmo`" != "" ] ; then
	osmobutton='--button="Launch Osmo Calendar:5"'
fi

eval yad --mouse --calendar \
	--window-icon=/usr/share/pixmaps/puppy/calendar.svg \
	--title="Calendar" --show-weeks $osmobutton
retval=$?

if [ $retval -eq 5 ] ; then
	exec osmo --calendar
fi

### END ###
