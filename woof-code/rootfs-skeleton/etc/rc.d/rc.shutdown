  #echo "`basename $SAVEFILE` mounted directly top layer, session already saved." >/dev/console
  ;;
 3) #PDEV1. #full installation to internal flash/ssd memory device
   ask_to_save_function
   [ $? = 0 ] && {
   eg_ "Saving session to \${PDEV1}...\n" >/dev/console #121104
   #echo "Saving session to $PDEV1..." >/dev/console
   /usr/sbin/snapmergepuppy /initrd/pup_ro1 /initrd/pup_rw
    }
  ;;
 7) #PDEV1 and PUPSFS. #frugal/full hybrid installation to flash memory
   ask_to_save_function
   [ $? = 0 ] && {
   eg_ "Saving session to \${PDEV1}...\n" >/dev/console
   #echo "Saving session to $PDEV1..." >/dev/console
   /usr/sbin/snapmergepuppy /initrd/pup_ro1 /initrd/pup_rw
    }
  ;;
 13) #PDEV1 and PUPSFS and PUPSAVE #frugal installation with save-file on flash memory
  #/initrd/pup_rw has tmpfs, pup_ro1 has ${DISTRO_FILE_PREFIX}save.2fs file (PUPSAVE), pup_ro2 has PUPSFS file.
  #the above are in unionfs at /.
  ask_to_save_function
  [ $? = 0 ] && {
  eg_ "Saving session to \${SAVEFILE} (\${SAVEPART})...\n" >/dev/console
  #echo "Saving session to $SAVEFILE (${SAVEPART})..." >/dev/console
  /usr/sbin/snapmergepuppy /initrd/pup_ro1 /initrd/pup_rw
    }
  ;;
 *) #unhandled
  g_ "Unhandled PUPMODE $PUPMODE : Session not saved\n" >/dev/console
  #echo "Session not saved" >/dev/console
  sleep 2
  ;;
esac


