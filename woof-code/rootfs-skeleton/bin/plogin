#!/bin/ash

TTY=tty1   #/etc/inittab
LOGIN_USER=
AUTOLOGIN=

if [ "$1" ] ; then
	LOGIN_USER="$1"
	echo -n "$1" > /etc/plogin
fi

if [ ! "$LOGIN_USER" ] ; then
	if [ -f /etc/plogin.set ] ; then #loginmanager
		mv -f /etc/plogin.set /etc/plogin
	fi
	if [ ! -f /etc/plogin ] ; then
		echo -n root > /etc/plogin
	fi
	read LOGIN_USER < /etc/plogin
	if [ "$(echo $LOGIN_USER)" = "" ] ; then
		LOGIN_USER=root
		echo -n root > /etc/plogin
	fi
fi

clear
while read l ; do
	[ -z "$l" ] && continue
	echo "$l"
done < /etc/issue

#==============================================

export AUTOLOGIN="$LOGIN_USER"

mkdir -p /tmp/services
echo -n > /tmp/services/user_info
if [ "$LOGIN_USER" != "root" ] ; then
	chown -R ${LOGIN_USER} /tmp/services
fi

#===============================================
############MISC DESKTOP STUFF##################

USER_HOME=$(awk -F: '$1=="'${LOGIN_USER}'" {print $6}' /etc/passwd)

. /etc/rc.d/PUPSTATE

case $PUPMODE in
	77) APP='savesession-dvd' ;;
	13) APP='save2flash'      ;;
esac

if [ -f ${USER_HOME}/Choices/ROX-Filer/PuppyPin ] ; then
	case $PUPMODE in
	77|13) #77=multisession cd/dvd. 13=#pup_rw is tmpfs. pmedia=usbflash
		if [ "`cat ${USER_HOME}/Choices/ROX-Filer/PuppyPin | grep "${APP}"`" = "" ];then
			echo "<icon x=\"768\" y=\"128\" label=\"save\">/usr/sbin/${APP}</icon>" >> ${USER_HOME}/Choices/ROX-Filer/PuppyPin
			grep -v '/pinboard' ${USER_HOME}/Choices/ROX-Filer/PuppyPin  > /tmp/PuppyPin-CPY
			cp -f /tmp/PuppyPin-CPY ${USER_HOME}/Choices/ROX-Filer/PuppyPin
			echo '</pinboard>' >> ${USER_HOME}/Choices/ROX-Filer/PuppyPin
		fi
		;;
	*)
		sed -i -e '/savesession-dvd/d' -e '/save2flash/d' ${USER_HOME}/Choices/ROX-Filer/PuppyPin
		;;
	esac
fi

case $PUPMODE in
	77|13) #77=multisession cd/dvd. 13=#pup_rw is tmpfs. pmedia=usbflash
		if [ ! -f ${USER_HOME}/Desktop/${APP}.desktop ] ; then
			mkdir -p ${USER_HOME}/Desktop
			echo "[Desktop Entry]
Encoding=UTF-8
Name=${APP}
Exec=${APP}
Terminal=false
Type=Application
Icon=/usr/share/pixmaps/puppy/save.svg" > ${USER_HOME}/Desktop/${APP}.desktop
  		chmod +x ${USER_HOME}/Desktop/${APP}.desktop
		fi
		;;
	*)
		rm -f ${USER_HOME}/Desktop/save2flash.desktop ${USER_HOME}/Desktop/savesession-dvd.desktop
		;;
esac

#==============================================
#             /home/xxx
#==============================================

case $USER_HOME in "/home/"*)
	if [ ! -d ${USER_HOME} ] ; then
		mkdir -p ${USER_HOME}
	fi
	case $(ls -dl ${USER_HOME}) in *root*)
		chown -R ${LOGIN_USER} ${USER_HOME} ;;
	esac
	#--
	SET_UID=$(ls -l /bin/busybox | cut -f 1 -d ' ' | grep s)
	if ! [ "$SET_UID" ] ; then
		#set the setuid bit...
		chmod u+s /bin/busybox
		if type ddcprobe >/dev/null 2>&1 ; then
			chmod u+s `which ddcprobe`
		fi
		if type Xorg >/dev/null 2>&1 ; then
			chmod u+s `which Xorg`
		fi
		if type xtables-multi >/dev/null 2>&1 ; then # iptables
			chmod u+s `which xtables-multi`
		fi
		if type xtables-legacy-multi >/dev/null 2>&1 ; then # iptables
			chmod u+s `which xtables-legacy-multi`
		fi		
		#see docs on busybox.conf at: http://www.softforge.de/bb/suid.html
		#also: http://www.slitaz.org/en/doc/scratchbook/base-system.html
		echo '[SUID]
reboot = ssx root.0   # reboot can be run by anyone and runs with euid=0/egid=0
poweroff = ssx root.0
halt = ssx root.0
su = ssx root.root
# passwd = ssx root.root
loadkmap = ssx root.root
mount = ssx root.root
umount = ssx root.root
ps = ssx root.0
kill = ssx root.0
' > /etc/busybox.conf
		if [ ! -f /var/local/chgdpasswd/root ] ; then
			echo ; echo
			passwd
			mkdir -p /var/local/chgdpasswd
			echo -n > /var/local/chgdpasswd/root
		fi
		if [ ! -f /var/local/chgdpasswd/${LOGIN_USER} ] ; then
			echo ; echo
			passwd ${LOGIN_USER} 2>/dev/null
			mkdir -p /var/local/chgdpasswd
			echo -n > /var/local/chgdpasswd/${LOGIN_USER}
		fi
	fi
	#--
	for i in Choices .config .jwm .jwmrc .bashrc .gtkrc-2.0 \
		.profile .rgb.txt .Xdefaults .xinitrc .Xresources
	do
		if [ -e /root/${i} ] && [ ! -e ${USER_HOME}/${i} ] ; then
			cp -a /root/${i} ${USER_HOME}/
			chown -R ${LOGIN_USER} ${USER_HOME}/${i}
		fi
	done
	#--
	find ${USER_HOME} -type l ! -exec test -e {} \; -print > /tmp/invalid_links
	while read line; do
		dir=${line%/*}
		file="${line##*/}"
		cd $dir
		pth=$(readlink "${file}")
		ln -sfv ../${pth} "${file}"
		cd - >/dev/null 2>&1
	done < /tmp/invalid_links
	#--
	for i in .cache .config .local/share Templates Desktop Downloads
	do
		if [ ! -d ${USER_HOME}/${i} ] ; then
			mkdir -p ${USER_HOME}/${i}
			chown -R ${LOGIN_USER} ${USER_HOME}/${i}
		fi
	done
	;;
esac

#==============================================
#             EXEC GETTY
#==============================================

exec getty -n -l /bin/autologin 115200,38400,9600 $TTY

### END ###
