echo "fixing jwm"
	head -n6 rootfs-complete/root/.jwm/jwm_colors > /tmp/jwm_colors
	cp -af /tmp/jwm_colors rootfs-complete/root/.jwm/
	rm -f /tmp/jwm_colors
echo "fixing gtkrc theme"
	head -n2 rootfs-complete/root/.gtkrc-2.0 > /tmp/.gtkrc-2.0
	echo '
style "user-font" {
	font_name = "Sans 12"
