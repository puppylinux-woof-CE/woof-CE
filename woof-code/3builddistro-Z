if [ -z "$wdefault" -a -z "$wptheme" ];then #it don't exists so we proceed with this method 
	echo
	echo "Continuing to setup `pwd`/rootfs-complete..."
	echo
	#141204 optional file...
	DEFAULT_THEME_GTK2=''
	DEFAULT_THEME_JWM=''
