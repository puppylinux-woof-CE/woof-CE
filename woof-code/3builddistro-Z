      keep=0
      for j in legal pmusic pburn pbackup help wvdial ffconvert cups nls; do #140128 added back legal, 01micko
         case `basename $i` in
            $j)
               keep=1
               break 1
               ;;
         esac
      done
      [ $keep -eq 0 ] && rm -rf $i
   fi
done
echo "Removing extra documentation"
for i in sandbox3/rootfs-complete/usr/share/locale/*; do
   if [ -d $i ]; then
      keep=0
      for j in en en_US locale.alias fi; do
         case `basename $i` in
            $j)
               keep=1
               break 1
               ;;
         esac
      done
      [ $keep -eq 0 ] && rm -rf $i
   fi
done
rm -rf sandbox3/rootfs-complete/usr/share/man/* 2>/dev/null
