	if [ ! -f ../../local-repositories/huge_kernels/${akfile} ] ; then
		mkdir -p ../../local-repositories/huge_kernels
		(
			cd ../../local-repositories/huge_kernels 
			wget -c --no-check-certificate ${ALT_KERNEL_TARBALL}
		)
	fi
	cp ../../local-repositories/huge_kernels/${akfile} build/
	cp ../boot/grub4dos/altkernel.sh build/
	cd build
	if ./altkernel.sh ${ALT_KERNEL_TARBALL} ; then
		XTRA_FLG="${XTRA_FLG}-altkernel"
	else
		echo "*** ERROR: Will not include alternative kernel ***"
		rm -f ../../local-repositories/huge_kernels/${akfile} &>/dev/null
	fi
	rm -f altkernel.sh
	mv -f ${akfile} ../../../local-repositories/huge_kernels
	cd ..
fi

