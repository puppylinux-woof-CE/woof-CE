#!/bin/sh
#create packages in status/download_list
#11-sep-2017

#This script runs 2createpackages for all packages listed in status/download_list as made by 1download

[ ! -f ./status/download_list ] && echo "/status/download_list cannot be found - exiting" && exit -1

. /usr/lib/gtkdialog/box_yesno --yes-first "Create packages" "OK to create packages from status/download_list?"
[ $EXIT != "yes" ] && exit -1

for pkg in `sort -u ./status/download_list | cut -d : -f 2`
do
if [ "$pkg" != "" ]; then
  echo "*****2createpackages $pkg *****"
  ./2createpackages $pkg
fi
done
exit 0
