download() {
    [ -f gtkdialog-0.8.4a.tar.xz ] || wget -t 3 -T 15 -O gtkdialog-0.8.4c.tar.gz https://github.com/puppylinux-woof-CE/gtkdialog/archive/0.8.4c.tar.gz
}

build() {
    tar -xzf gtkdialog-0.8.4c.tar.gz
    cd gtkdialog-0.8.4c
    if pkg-config --atleast-version=3.24.24 gtk+-3.0; then
        ./autogen.sh --prefix=/usr --bindir=/usr/sbin --enable-gtk3
    else
        ./autogen.sh --prefix=/usr --bindir=/usr/sbin
    fi
    make install
}