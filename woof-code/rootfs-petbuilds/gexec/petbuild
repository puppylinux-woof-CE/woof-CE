download() {
    [ -f gexec-0.5.1.tar.gz ] || wget -t 3 -T 60 -O gexec-0.5.1.tar.gz https://github.com/puppylinux-woof-CE/gexec/archive/refs/tags/0.5.1.tar.gz
}

build() {
    tar -xzf gexec-0.5.1.tar.gz
    cd gexec-0.5.1
    if [ $PETBUILD_GTK -eq 3 ]; then
        make
    else
        make GTK=gtk+-2.0
    fi
    install -m 755 gexec /usr/bin/gexec
}