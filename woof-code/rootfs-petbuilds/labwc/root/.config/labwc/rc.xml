<?xml version="1.0"?>

<labwc_config>
  <theme>
    <cornerRadius>5</cornerRadius>
  </theme>

  <windowSwitcher show="yes" preview="no" outlines="yes">
    <fields>
      <field content="title" width="100%" />
    </fields>
  </windowSwitcher>

  <keyboard>
    <default />

    <keybind key="A-Up" />
    <keybind key="A-Down" />
    <!-- these collide with back/forward navigation in the browser -->
    <keybind key="A-Left" />
    <keybind key="A-Right" />

    <keybind key="W-Up">
      <action name="ToggleMaximize" />
    </keybind>

    <keybind key="W-Down">
      <action name="Iconify" />
    </keybind>

    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-" />
    </keybind>

    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+" />
    </keybind>

    <keybind key="XF86_AudioMute">
      <action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle" />
    </keybind>

    <keybind key="Print">
      <action name="Execute"><command>defaultscreenshot</command></action>
    </keybind>

    <keybind key="S-Print">
      <action name="Execute"><command>slurp-screenshot</command></action>
    </keybind>

    <keybind key="W-S-s">
      <action name="Execute"><command>slurp-screenshot</command></action>
    </keybind>

    <keybind key="A-F1">
      <action name="ShowMenu"><menu>root-menu</menu></action>
    </keybind>

    <keybind key="A-F2">
      <action name="Execute"><command>defaultrun</command></action>
    </keybind>

    <keybind key="W-l">
      <action name="Execute"><command>puplock</command></action>
    </keybind>

    <keybind key="W-r">
      <action name="Execute"><command>defaultrun</command></action>
    </keybind>

    <keybind key="W-e">
      <action name="Execute"><command>defaultfilemanager</command></action>
    </keybind>

    <keybind key="W-w">
      <action name="Execute"><command>defaultbrowser</command></action>
    </keybind>

    <keybind key="C-A-t">
      <action name="Execute"><command>defaultterminal</command></action>
    </keybind>

    <keybind key="C-A-Delete">
      <action name="Execute"><command>defaultprocessmanager</command></action>
    </keybind>

    <keybind key="C-S-Escape">
      <action name="Execute"><command>defaultprocessmanager</command></action>
    </keybind>
  </keyboard>

</labwc_config>