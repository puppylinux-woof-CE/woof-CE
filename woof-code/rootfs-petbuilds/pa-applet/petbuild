download() {
    [ -f pa-applet-b68db92c6435197b9e503200c6da801f563dab70.zip ] || wget -t 1 -T 15 -O pa-applet-b68db92c6435197b9e503200c6da801f563dab70.zip https://github.com/dimkr/pa-applet/archive/b68db92c6435197b9e503200c6da801f563dab70.zip
}

build() {
    unzip -q pa-applet-b68db92c6435197b9e503200c6da801f563dab70.zip
    cd pa-applet-b68db92c6435197b9e503200c6da801f563dab70
    ./autogen.sh
    ./configure --prefix=/usr --without-libnotify
    make install
}