download() {
    [ -f disktype-9-patched_pardus_bk.tar.gz ] || wget -t 1 -T 15 http://distro.ibiblio.org/puppylinux/sources/d/disktype-9-patched_pardus_bk.tar.gz
}

build() {
    tar -xzf disktype-9-patched_pardus_bk.tar.gz
    cd disktype-9-patched_pardus_bk
    gcc $CFLAGS -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DUSE_IOCTL_LINUX *.c $LDFLAGS -o /usr/bin/disktype
}