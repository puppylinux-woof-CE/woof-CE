download() {
    [ -f Xdialog-2.3.4.zip ] || wget -t 3 -T 60 https://github.com/puppylinux-woof-CE/Xdialog/releases/download/2_3_4/Xdialog-2.3.4.tar.bz2
}

build() {
    tar -xJf Xdialog-2.3.4.bz2
    cd Xdialog-2.3.4
    if [ $PETBUILD_GTK -eq 3 ]; then
        ./configure --prefix=/usr --mandir=/usr/share/man --with-gtk3
    else
        ./configure --prefix=/usr --mandir=/usr/share/man --with-gtk2
    fi
    make install
    rm -rf /usr/share/doc
}