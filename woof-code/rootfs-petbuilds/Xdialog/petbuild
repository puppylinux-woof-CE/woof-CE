download() {
    [ -f Xdialog-2020.10.tar.bz2 ] || wget -t 1 -T 15 http://distro.ibiblio.org/puppylinux/sources/x/Xdialog-2020.10.tar.bz2
}

build() {
    tar -xjf Xdialog-2020.10.tar.bz2
    cd Xdialog
    patch -p1 < ../gtk-version.patch
    ./configure --prefix=/usr --mandir=/usr/share/man --with-gtk2
    make install
    rm -rf /usr/share/doc
}