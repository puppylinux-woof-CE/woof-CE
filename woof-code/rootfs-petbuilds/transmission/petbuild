download() {
    [ -f transmission-4.0.0.tar.xz ] || wget -t 3 -T 60 https://github.com/transmission/transmission/releases/download/4.0.0/transmission-4.0.0.tar.xz
}

build() {
    tar -xJf transmission-4.0.0.tar.xz
    cd transmission-4.0.0
    patch -p1 < ../defaults.patch
    if [ $PETBUILD_GTK -lt 4 ]; then
        CC=gcc CXX=g++ cmake -B build -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_GTK=ON -DENABLE_QT=OFF -DENABLE_WEB=OFF -DWITH_SYSTEMD=OFF -DUSE_GTK_VERSION=3
    else
        CC=gcc CXX=g++ cmake -B build -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_GTK=ON -DENABLE_QT=OFF -DENABLE_WEB=OFF -DWITH_SYSTEMD=OFF
    fi
    cmake --build build
    cmake --install build
    sed 's/^Categories=.*/Categories=FileTransfer;/' -i /usr/share/applications/transmission-gtk.desktop
}