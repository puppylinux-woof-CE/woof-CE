download() {
    [ -f puppy_flat_theme-master.zip ] || wget -t 1 -T 15 -O puppy_flat_theme-master.zip https://github.com/puppylinux-woof-CE/puppy_flat_theme/archive/refs/heads/master.zip
}

build() {
    unzip -q puppy_flat_theme-master.zip
    cd puppy_flat_theme-master
    export THEME="Puppy Flat"
    make && make install
    install -d -m 0755 /usr/local/lib/X11/themes/PuppyFlat
    cp -ar puppy_flat_icons/usr/local/lib/X11/themes/PuppyFlat/* /usr/local/lib/X11/themes/PuppyFlat
}
