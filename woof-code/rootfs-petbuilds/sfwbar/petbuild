download() {
    [ -f sfwbar-1.0_beta11.tar.gz ] || wget -t 3 -T 60 -O sfwbar-1.0_beta11.tar.gz https://github.com/LBCrion/sfwbar/archive/refs/tags/v1.0_beta11.tar.gz
}

build() {
    tar -xzf sfwbar-1.0_beta11.tar.gz
    cd sfwbar-1.0_beta11
    meson --buildtype=release --prefix=/usr build
    ninja -C build install
    cd ..
}
