download() {
    [ -f sfwbar-a76d4b2905bb2fa05b96b24dd0ee47cb05dc3965.zip ] || wget -t 3 -T 60 -O sfwbar-a76d4b2905bb2fa05b96b24dd0ee47cb05dc3965.zip https://github.com/LBCrion/sfwbar/archive/a76d4b2905bb2fa05b96b24dd0ee47cb05dc3965.zip
}

build() {
    unzip sfwbar-a76d4b2905bb2fa05b96b24dd0ee47cb05dc3965.zip
    cd sfwbar-a76d4b2905bb2fa05b96b24dd0ee47cb05dc3965
    meson --buildtype=release --prefix=/usr build
    ninja -C build install
    cd ..
}
