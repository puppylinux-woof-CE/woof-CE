layout {

  label {
    style = "time"
    interval = 1000
    action = "timebar"
    tooltip = Time("%a %b %d")+"\n\nPress to launch\ntime bar"
    css = "* { font: 10pt Mono; font-weight: 600; -GtkWidget-align: 0.5; -GtkWidget-hexpand: true; -GtkWidget-vexpand: true; min-width: 80px; padding-right: 4px; }"
    value = Time("%k:%M %Z")
  }
}
