download() {
    [ -f Pmaterial-master.zip ] || wget -t 1 -T 15 -O Pmaterial-master.zip https://github.com/puppylinux-woof-CE/Pmaterial/archive/refs/heads/master.zip
}

build() {
    unzip -q Pmaterial-master.zip
    cd Pmaterial-master
    export THEME=PMaterial
    make && make install
    install -d -m 0755 /usr/local/lib/X11/themes/"$THEME"
    cp -ar pmaterial_icons/usr/local/lib/X11/themes/"$THEME"/* /usr/local/lib/X11/themes/"$THEME"
}
