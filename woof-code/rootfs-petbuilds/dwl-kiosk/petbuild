download() {
    [ -f dwl-b8bc54b65d7dfaf1c7aa92de32f8ca37d8e011f9.zip ] || wget -t 3 -T 60 -O dwl-b8bc54b65d7dfaf1c7aa92de32f8ca37d8e011f9.zip https://github.com/djpohly/dwl/archive/b8bc54b65d7dfaf1c7aa92de32f8ca37d8e011f9.zip
}

build() {
    unzip dwl-b8bc54b65d7dfaf1c7aa92de32f8ca37d8e011f9.zip
    cd dwl-b8bc54b65d7dfaf1c7aa92de32f8ca37d8e011f9
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}