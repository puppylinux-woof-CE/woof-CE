download() {
    [ -f dwl-b5776e5180010ead5232efb36b2490f4fc9e1366.zip ] || wget -t 3 -T 60 -O dwl-b5776e5180010ead5232efb36b2490f4fc9e1366.zip https://github.com/djpohly/dwl/archive/b5776e5180010ead5232efb36b2490f4fc9e1366.zip
}

build() {
    unzip dwl-b5776e5180010ead5232efb36b2490f4fc9e1366.zip
    cd dwl-b5776e5180010ead5232efb36b2490f4fc9e1366
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}