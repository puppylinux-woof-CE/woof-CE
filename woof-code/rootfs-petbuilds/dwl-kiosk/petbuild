download() {
    [ -f dwl-e9826de2959609f597bc80137183828562315c14.zip ] || wget -t 3 -T 60 -O dwl-e9826de2959609f597bc80137183828562315c14.zip https://github.com/djpohly/dwl/archive/e9826de2959609f597bc80137183828562315c14.zip
}

build() {
    unzip dwl-e9826de2959609f597bc80137183828562315c14.zip
    cd dwl-e9826de2959609f597bc80137183828562315c14
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}