download() {
    [ -f dwl-9bcef3d040790b5f3064e33e149891120055a377.zip ] || wget -t 3 -T 60 -O dwl-9bcef3d040790b5f3064e33e149891120055a377.zip https://github.com/djpohly/dwl/archive/9bcef3d040790b5f3064e33e149891120055a377.zip
}

build() {
    unzip dwl-9bcef3d040790b5f3064e33e149891120055a377.zip
    cd dwl-9bcef3d040790b5f3064e33e149891120055a377
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}