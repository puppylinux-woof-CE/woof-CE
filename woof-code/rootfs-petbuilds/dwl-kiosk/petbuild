download() {
    [ -f dwl-7a343b98cf37fb293313dada734c0d433b27fba4.zip ] || wget -t 3 -T 60 -O dwl-7a343b98cf37fb293313dada734c0d433b27fba4.zip https://github.com/djpohly/dwl/archive/7a343b98cf37fb293313dada734c0d433b27fba4.zip
}

build() {
    unzip dwl-7a343b98cf37fb293313dada734c0d433b27fba4.zip
    cd dwl-7a343b98cf37fb293313dada734c0d433b27fba4
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}