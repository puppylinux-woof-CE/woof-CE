download() {
    [ -f dwl-f6820a6c29b6bcb9a14166793d7f1fba2f98444e.zip ] || wget -t 3 -T 60 -O dwl-f6820a6c29b6bcb9a14166793d7f1fba2f98444e.zip https://github.com/djpohly/dwl/archive/f6820a6c29b6bcb9a14166793d7f1fba2f98444e.zip
}

build() {
    unzip dwl-f6820a6c29b6bcb9a14166793d7f1fba2f98444e.zip
    cd dwl-f6820a6c29b6bcb9a14166793d7f1fba2f98444e
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}