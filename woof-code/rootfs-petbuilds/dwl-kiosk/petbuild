download() {
    [ -f dwl-569f55401693c9d2850f056f20ca2bd5bd5977fd.zip ] || wget -t 3 -T 60 -O dwl-569f55401693c9d2850f056f20ca2bd5bd5977fd.zip https://github.com/djpohly/dwl/archive/569f55401693c9d2850f056f20ca2bd5bd5977fd.zip
}

build() {
    unzip dwl-569f55401693c9d2850f056f20ca2bd5bd5977fd.zip
    cd dwl-569f55401693c9d2850f056f20ca2bd5bd5977fd
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}