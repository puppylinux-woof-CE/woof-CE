download() {
    [ -f dwl-952fde68a3cb1871f39c464d56f999d5a966e7a4.zip ] || wget -t 3 -T 60 -O dwl-952fde68a3cb1871f39c464d56f999d5a966e7a4.zip https://github.com/djpohly/dwl/archive/952fde68a3cb1871f39c464d56f999d5a966e7a4.zip
}

build() {
    unzip dwl-952fde68a3cb1871f39c464d56f999d5a966e7a4.zip
    cd dwl-952fde68a3cb1871f39c464d56f999d5a966e7a4
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}