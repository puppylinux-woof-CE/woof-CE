download() {
    [ -f dwl-2385d826122d24b72cab2ce531ad538d87407622.zip ] || wget -t 3 -T 60 -O dwl-2385d826122d24b72cab2ce531ad538d87407622.zip https://github.com/djpohly/dwl/archive/2385d826122d24b72cab2ce531ad538d87407622.zip
}

build() {
    unzip dwl-2385d826122d24b72cab2ce531ad538d87407622.zip
    cd dwl-2385d826122d24b72cab2ce531ad538d87407622
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}