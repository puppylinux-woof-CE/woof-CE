download() {
    [ -f dwl-174919ec5342af19504661b30359068af5fcf1c1.zip ] || wget -t 3 -T 60 -O dwl-174919ec5342af19504661b30359068af5fcf1c1.zip https://github.com/djpohly/dwl/archive/174919ec5342af19504661b30359068af5fcf1c1.zip
}

build() {
    unzip dwl-174919ec5342af19504661b30359068af5fcf1c1.zip
    cd dwl-174919ec5342af19504661b30359068af5fcf1c1
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}