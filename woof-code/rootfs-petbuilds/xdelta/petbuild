download() {
    [ -f xdelta-30p.tar.bz2 ] || wget -t 1 -T 15 http://distro.ibiblio.org/puppylinux/sources/x/xdelta-30p.tar.bz2
}

build() {
    tar -xjf xdelta-30p.tar.bz2
    cd xdelta-30p
    gcc $CFLAGS -DXD3_DEBUG=0 -DXD3_USE_LARGEFILE64=1 -DREGRESSION_TEST=1 -DSECONDARY_DJW=1 -DSECONDARY_FGK=1 -DXD3_MAIN=1 -DXD3_POSIX=1 xdelta3.c $LDFLAGS -lm -o /usr/bin/xdelta3
}