#!/bin/sh

mkdir -p usr/share/applications

cat > usr/share/applications/gtk-chtheme.desktop <<EOF
[Desktop Entry]
Encoding=UTF-8
Name=Chtheme GTK/Qt theme chooser
Icon=/usr/share/pixmaps/puppy/windows.svg
Comment=GTK/Qt theme chooser
Exec=gtk_chtheme_wrapper
Terminal=false
Type=Application
Categories=X-Desktop-appearance
GenericName=Chtheme
EOF

