mkdir -p etc/xdg/autostart
cat << EOF > etc/xdg/autostart/yambar.desktop
[Desktop Entry]
Version=1.0
Name=yambar
Comment=yambar
Exec=yambar
Terminal=false
Type=Application
EOF

mkdir -p root/.config/yambar
cat << EOF > root/.config/yambar/config.yml
# Typical setup

# fonts we'll be re-using here and there
pupmoon: &ico:pixelsize=20
std_underline: &std_underline {underline: { size: 2, color: ff0000ff}}

# NOTES: you can change to 'location: bottom'
# if you have multiple monitors you can place an entry below 'location:'
# eg: 'monitor: "DVI-D-1"'
# Spacing and indentation IS IMPORTANT
# change 'wlan0' in the network section to your interface

# This is THE bar configuration
bar:
  height: 28
  location: top
  spacing: 5
  margin: 7

  # Default font
  font: DejaVuSans:pixelsize=14

  foreground: ffffffff
  background: 000000ff

  left:
    - label:
        content:
          - string: { on-click: killall -USR1 altf1d, text:  , left-margin: 12, right-margin: 18, font: *ico, foreground: ffe624ff,  deco: {background: {color: 11111133}} }
    - label:
        content:
          string:
            on-click: defaultterminal
            text: 
            left-margin: 5
            right-margin: 5
            font: *ico
            foreground: dddddddd
            deco: {background: {color: 00000033}}
    - label:
        content:
          string:
            on-click: firefox
            text: 
            left-margin: 5
            right-margin: 5
            font: *ico
            foreground: dd00dddd
            deco: {background: {color: 00000033}}
    - label:
        content:
          string:
            on-click: defaultfilemanager
            text: 
            left-margin: 5
            right-margin: 5
            font: *ico
            foreground: ffe198dd
            deco: {background: {color: 00000033}}
    - label:
        content:
          string:
            on-click: pmount
            text: 
            left-margin: 5
            right-margin: 5
            font: *ico
            foreground: 3c3c3cdd
            deco: {background: {color: 00000033}}
    - label:
        content:
          string:
            on-click: defaulttexteditor
            text: 
            left-margin: 7
            right-margin: 7
            font: *ico
            foreground: dddddddd
            deco: {background: {color: 00000033}}

    - foreign-toplevel:
        content:
          map:
            tag: activated
            values:
              false: {empty: {}}
              true:
                - string: {text: "{title}", max: 90}

  right:
    - removables:
        anchors:
          drive: &drive { text: , font: *ico, foreground: 3d3d3ddd}
          optical: &optical {text: , font: *ico, foreground: bdbdbddd}
        spacing: 5
        content:
          map:
            tag: mounted
            values:
              false:
                map:
                  tag: optical
                  on-click:  /usr/local/pup_event/drive_all {device}
                  values:
                    false: [{string: *drive}, {string: {text: "{label}"}}]
                    true: [{string: *optical}, {string: {text: "{label}"}}]
              true:
                map:
                  tag: optical
                  on-click: umount {device}
                  values:
                    false:
                      - string: {<<: *drive, deco: *std_underline}
                      - string: {text: "{label}"}
                    true:
                      - string: {<<: *optical, deco: *std_underline}
                      - string: {text: "{label}"}
    - network:
        name: wlan0
        content:
          map:
            tag: state
            default: {string: {text: , font: *ico, foreground: 00ff0066, right-margin: 4}}
            values:
              down: {string: {text: , font: *ico, foreground: ff0000ff}}
              up:
                map:
                  on-click: defaultconnect
                  tag: ipv4
                  default:
                    - string: {text: , font: *ico, foreground: 00ff0066, right-margin: 4}
                    - string: {text: "{ssid}"}
                  values:
                    "":
                      - string: {text: , font: *ico, foreground: 00ff0066, right-margin: 4}
                      - string: {text: "{ssid}", foreground: ffffff66}
    - alsa:
        card: hw:Generic
        mixer: Master
        content:
          map:
            tag: online
            values:
              false: {string: {text: , font: *ico, foreground: ff0000ff}}
              true:
                map:
                  on-click: ppavolume
                  tag: muted
                  values:
                    true: {string: {text: , font: *ico, foreground: ffffff66}}
                    false:
                      ramp:
                        tag: volume
                        items:
                          - string: {text: , font: *ico, on-click: foot -W 80x6 -e pulsemixer}
                          - string: {text: , font: *ico, on-click: foot -W 80x6 -e pulsemixer}
                          - string: {text: , font: *ico, on-click: foot -W 80x6 -e pulsemixer}
                          - string: {text: , font: *ico, on-click: foot -W 80x6 -e pulsemixer}
                          - string: {text: , font: *ico, on-click: foot -W 80x6 -e pulsemixer}
    - clock:
        time-format: "%H:%M %Z"
        content:
          - string: {text: , font: *ico, on-click: clock_menu, foreground: bbcfffdd}
          - string: {text: "{time}"}
    - label:
        content:
          string:
            on-click: logout_gui
            text: 
            font: *ico
            foreground: dd0033dd
EOF

rm -rf usr/share/applications/yambar.desktop usr/share/zsh
