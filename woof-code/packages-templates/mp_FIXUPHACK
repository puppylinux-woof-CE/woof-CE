
[ -f usr/bin/mped ] && mv -f usr/bin/mped usr/bin/mp

echo '[Desktop Entry]
Encoding=UTF-8
Name=MP console editor
Icon=/usr/share/pixmaps/puppy/edit.svg
Comment=MP console editor
Exec=rxvt -geometry 80x25 -e mp
Terminal=false
Type=Application
Categories=TextEditor
GenericName=MP console editor
' > usr/share/applications/MP-console-editor.desktop

