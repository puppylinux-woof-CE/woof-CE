
mkdir -p usr/share/applications

echo '[Desktop Entry]
Encoding=UTF-8
Name=ePDFView PDF viewer
Icon=/usr/share/pixmaps/puppy/pdf.svg
Comment=ePDFView PDF viewer
Exec=epdfview
Terminal=false
Type=Application
Categories=X-DocumentUtility
GenericName=ePDFView PDF viewer
' > usr/share/applications/epdfview.desktop
