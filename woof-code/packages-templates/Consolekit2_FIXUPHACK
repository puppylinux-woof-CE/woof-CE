#!/bin/sh

for flds in /lib /usr/lib /usr/local/lib
do

flck=$flds/ConsoleKit/scripts/ck-system-restart

rm -f $flck
echo "#!/bin/sh

shutdown_system(){
 . /etc/rc.d/PUPSTATE
 if [ $PUPMODE -eq 5 ]; then 
	shutdownconfig
 fi
 $@
 exit $?
		
}

#Try for common tools
if [ -x \"/sbin/shutdown\" ] ; then
	shutdown_system \"/sbin/shutdown\" -r now
elif [ -x \"/usr/sbin/shutdown\" ] ; then
	shutdown_system \"/usr/sbin/shutdown\" -r now
else
	exit 1
fi
" > $flck
chmod +x $flck

flck=$flds/ConsoleKit/scripts/ck-system-stop

rm -f $flck
echo "#!/bin/sh

shutdown_system(){
 . /etc/rc.d/PUPSTATE
 if [ $PUPMODE -eq 5 ]; then 
	shutdownconfig
 fi
 $@
 exit $?
		
}

#Try for common tools
if [ -x \"/sbin/shutdown\" ] ; then
	shutdown_system \"/sbin/shutdown\" -h now
elif [ -x \"/usr/sbin/shutdown\" ] ; then
	shutdown_system \"/usr/sbin/shutdown\" -h now
else
	exit 1
fi
" > $flck
chmod +x $flck

done
