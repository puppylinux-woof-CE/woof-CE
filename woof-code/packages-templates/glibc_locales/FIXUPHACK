(
cd usr/share/i18n/charmaps
ls * | while read i ; do
	case $CHARMAPS in
		*"$i"*) continue  ;;
		*) rm -f $i ;;
	esac
done
)

(
cd usr/share/i18n/locales
ls * | while read i ; do
	case $LOCALES in
		*"$i"*) continue  ;;
		*) rm -f $i ;;
	esac
done
)

mkdir -p usr/lib/locale
