
#original pkg has gtkam.png in /usr/share/pixmaps

echo '[Desktop Entry]
Encoding=UTF-8
Name=Gtkam camera manager
Comment=Transfer pictures from your digital camera
Exec=gtkam
Icon=gtkam.png
StartupNotify=true
Terminal=false
Type=Application
Categories=X-GraphicUtility
' > usr/share/applications/gtkam.desktop
