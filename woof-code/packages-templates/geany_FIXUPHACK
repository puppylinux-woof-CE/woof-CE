#!/bin/sh

#these are big files...
find . \( -name '*php.tags*' -o -name '*global.tags*' -o -name '*latex.tags*' \) -delete

if [ -f usr/share/applications/geany.desktop ] ; then
	sed -i \
		-e 's%Name=.*%Name=Geany%' \
		-e 's%Comment=.*%Comment=IDE and text editor%'
		-e 's%Exec=.*%Exec=geany%' \
		-e 's%Icon=.*%Icon=geany.png%' \
		-e 's%Categories=.*%Categories=TextEditor%' \
			usr/share/applications/geany.desktop
fi

mkdir -p root/.config/geany
cat > root/.config/geany/geany.conf <<EOF
#geany configuration file, edit as you need

[geany]
toolbar_visible=true
toolbar_icon_style=0
treeview_position=156
msgwindow_position=332
mru_length=10
long_line_column=79
long_line_color=#C2EBC2
beep_on_errors=true
treeview_symbol_visible=false
treeview_openfiles_visible=false
msgwindow_visible=false
use_folding=true
use_auto_indention=true
show_indent_guide=false
show_white_space=false
show_markers_margin=false
show_linenumber_margin=false
line_breaking=true
show_line_endings=false
fullscreen=false
tab_order_ltr=false
brace_match_ltgt=false
switch_msgwin_pages=true
auto_close_xml_tags=false
auto_complete_constructs=false
# VTE settings: FONT;FOREGROUND;BACKGROUND;scrollback;type;scroll on keystroke;scroll on output
terminal_settings=
editor_font=Monospace 12
tagbar_font=Cursor 8
msgwin_font=Cursor 8
scribble_text=Type here what you want, use it as a notice/scratch board
geometry=314;65;676;463;
pref_editor_tab_width=4
pref_main_confirm_exit=false
pref_main_load_session=true
pref_main_save_winpos=true
pref_main_show_search=true
pref_main_show_goto=true
pref_editor_new_line=false
pref_editor_trail_space=false
pref_template_developer=root
pref_template_company=
pref_template_mail=root@puppypc
pref_template_initial=r
pref_template_version=1.0
long_line_type=0
tab_pos_editor=2
tab_pos_msgwin=0
tab_pos_sidebar=2
sidebar_symbol_visible=true
sidebar_openfiles_visible=true
sidebar_visible=false
use_indicators=true
pref_toolbar_show=true
pref_toolbar_show_search=true
pref_toolbar_show_goto=true
pref_toolbar_show_zoom=false
pref_toolbar_show_undo=false
pref_toolbar_show_compile=true
pref_toolbar_show_colour=true
pref_toolbar_show_fileops=true
pref_toolbar_icon_style=2
pref_toolbar_icon_size=3
pref_editor_replace_tabs=false
pref_editor_default_encoding=ISO-8859-1

[build]
build_make_cmd=/usr/bin/make
build_term_cmd=/usr/local/bin/defaultterminal
build_browser_cmd=/usr/local/bin/defaultbrowser

[files]
recent_files=
FILE_NAME_1=
FILE_NAME_2=
FILE_NAME_3=
FILE_NAME_4=
FILE_NAME_5=
FILE_NAME_6=
FILE_NAME_7=
FILE_NAME_8=
FILE_NAME_9=
FILE_NAME_10=
FILE_NAME_11=
FILE_NAME_12=
FILE_NAME_13=
FILE_NAME_14=
FILE_NAME_15=
FILE_NAME_16=
FILE_NAME_17=
FILE_NAME_18=
FILE_NAME_19=
FILE_NAME_20=
FILE_NAME_21=
FILE_NAME_22=
FILE_NAME_23=
FILE_NAME_24=
FILE_NAME_0=

[tools]
make_cmd=
term_cmd=/usr/local/bin/defaultterminal -e bash -c
browser_cmd=/usr/local/bin/defaultbrowser
print_cmd=/usr/bin/lpr %f
grep_cmd=/bin/grep
EOF

