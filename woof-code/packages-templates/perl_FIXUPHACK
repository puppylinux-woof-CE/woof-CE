for SO in JP.so KR.so CN.so TW.so; do
	find . -name $SO -type f | while read FILE; do
		DIR=`dirname $FILE`
		PARENT=`dirname $DIR`
		mkdir -p "../perl_NLS/$PARENT"
		mv $DIR "../perl_NLS/$PARENT/"
	done
done

#Look for pod files
find . -name "*.pod" -type f | while read FILE; do
	DIR=`dirname $FILE`
	PARENT=`dirname $DIR`
	mkdir -p "../perl_DOC/$PARENT"
	mv $DIR "../perl_DOC/$PARENT/"
done

#Look for header files
find . -name "*.h" -type f | while read FILE; do
	DIR=`dirname $FILE`
	PARENT=`dirname $DIR`
	mkdir -p "../perl_DEV/$PARENT"
	mv $DIR "../perl_DEV/$PARENT/"
done
