#!/bin/sh

mkdir -p usr/share/applications

cat > usr/share/applications/gdmap.desktop <<EOF
[Desktop Entry]
Encoding=UTF-8
Name=Gdmap graphical disk usage
Icon=gdmap_icon.png
Comment=Gdmap graphical disk usage
Exec=gdmap
Terminal=false
Type=Application
Categories=X-FilesystemUtility
GenericName=Gdmap
#Categories=Filesystem;Utility;GTK
EOF

### END ###