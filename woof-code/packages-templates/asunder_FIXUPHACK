
mkdir -p usr/share/applications

echo '[Desktop Entry]
Name=Asunder audio CD ripper
GenericName=Audio CD Ripper
Comment=An application to save tracks from an Audio CD as WAV, MP3, OGG, and/or FLAC.
Exec=asunder
Encoding=UTF-8
Terminal=false
StartupNotify=true
Type=Application
Categories=X-Multimedia-sound
Icon=/usr/share/pixmaps/puppy/cd_rip.svg
' > usr/share/applications/asunder.desktop


