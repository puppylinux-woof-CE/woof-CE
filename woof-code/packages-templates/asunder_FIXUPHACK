#!/bin/sh

if [ -f usr/share/applications/asunder.desktop ] ; then
	sed -i \
		-e 's%Name=.*%Name=Asunder%' \
		-e 's%Comment=.*%Comment=audio CD ripper%' \
		-e 's%Icon=.*%Icon=/usr/share/pixmaps/puppy/cd_rip.svg%' \
		-e 's%Categories=.*%Categories=X-Multimedia-sound%' \
			usr/share/applications/asunder.desktop
fi
