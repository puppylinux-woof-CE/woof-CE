DISABLE_POST_INSTALL_SCRIPT=yes

BASH=`find ./bin -name 'bash*'`
mv $BASH ./bin/bash 2>/dev/null

mkdir -p usr/bin

ln -sf bash bin/sh
ln -sf ../../bin/bash usr/bin/sh
ln -sf ../../bin/bash usr/bin/bash

#files in /etc
#	etc/bash.bashrc
#	etc/skel/.bash_logout
#	etc/skel/.bashrc
#	etc/skel/.profile
rm -rf etc
