
rm -f usr/share/applications/isomaster.desktop

mkdir -p usr/share/applications

echo '[Desktop Entry]
Encoding=UTF-8
Name=ISOMaster iso file editor
Icon=/usr/share/pixmaps/puppy/cdrom.svg
Comment=ISOMaster iso file editor
Exec=isomaster
Terminal=false
Type=Application
Categories=DiskBurning
GenericName=ISOMaster iso file editor
' > usr/share/applications/ISOMaster-iso-file-editor.desktop

