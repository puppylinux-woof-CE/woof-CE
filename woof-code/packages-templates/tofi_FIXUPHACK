mkdir -p root/.config/tofi
cat << EOF > root/.config/tofi/config
anchor = top
width = 100%
height = 26
horizontal = true
font-size = 10
prompt-text = "\$ "
font = /usr/share/fonts/truetype/noto/NotoMono-Regular.ttf
outline-width = 0
border-width = 1
background-color = #000000
border-color = #ff00ff
text-color = #ffffff
selection-color = #000000
selection-background = #ffffff
num-results = 10
min-input-width = 64
result-spacing = 10
padding-top = 4
padding-bottom = 4
padding-left = 4
padding-right = 4
hint-font = false
scale = true
EOF

cat << EOF > usr/bin/tofi-exec
#!/bin/ash
cmd="\`tofi-run 2>/dev/null\`"
[ -n "\$cmd" ] && exec "\$cmd"
EOF
chmod 755 usr/bin/tofi-exec
