case ${DISTRO_BINARY_COMPAT} in
devuan)
  [ -e usr/lib/${ARCHDIR}/libelogind.so.0 -a ! -e usr/lib/${ARCHDIR}/libsystemd.so.0 ] && ln -sv libelogind.so.0 /usr/lib/${ARCHDIR}/libsystemd.so.0
  exit
slackware|slackware64)
  ;;
*)
  exit 0
  ;;
esac

# slackware - purge useless stuff
rm -rf etc bin usr

for d in lib/* ; do
  [ -d "$d" ] && rm -r $d
done

# 64
if [ -d lib64 ];then
  for d in lib64/* ; do
    [ -d "$d" ] && rm -r $d
  done
fi
