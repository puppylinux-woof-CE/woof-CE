	if [ -z "$ID" ] ; then
	    return
	fi
	
	ssid=$(wpa_cli -i "$INTERFACE" get_network "$ID" ssid | tr -d \")
	if [[ $ssid != "FAIL" ]] ; then
	    echo "$ssid"
	fi 
}
export -f   get_ssid 

