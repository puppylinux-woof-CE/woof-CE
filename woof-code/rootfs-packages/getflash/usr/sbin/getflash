## Define forum buttons
if [ "$FORUMURL_FLASKPKGS_32" ]; then
 if [ "$DISTRO_TARGETARCH" == "x86" ];then #150305
  SEE_FORUM='<frame '$SEE_FRAME_FORUM'>
  <hbox><text><label>"'$SEE_FORUM_LABEL_GETFLASH'"</label></text>
